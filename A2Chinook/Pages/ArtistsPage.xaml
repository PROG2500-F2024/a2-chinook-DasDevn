<Page x:Class="A2Chinook.Pages.ArtistsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:A2Chinook.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ArtistsPage">

    
    <Page.Resources>
        <CollectionViewSource x:Key="artistViewSource"></CollectionViewSource>
        <Style x:Key="CellPaddingStyle" TargetType="TextBlock">
            <Setter Property="Padding" Value="10,0,10,0"/>
        </Style>
    </Page.Resources>

    <StackPanel>
        <TextBlock Text="Chinook Artists" FontSize="24"></TextBlock>
        <DataGrid ItemsSource="{Binding Source={StaticResource artistViewSource}}"
                AutoGenerateColumns="False"
                GridLinesVisibility="None"
                BorderBrush="Transparent"
                HeadersVisibility="Column"    
                AlternatingRowBackground="LightGray">
        <DataGrid.Columns>
            <DataGridTextColumn Binding="{Binding ArtistId}" Header="ID"></DataGridTextColumn>
            <DataGridTextColumn Binding="{Binding Name}" Header="Artist Name"></DataGridTextColumn>
        </DataGrid.Columns>
        </DataGrid>
    </StackPanel>
</Page>
