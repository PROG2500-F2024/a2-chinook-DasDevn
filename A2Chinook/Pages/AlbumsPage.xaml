<Page x:Class="A2Chinook.Pages.AlbumsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:A2Chinook.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AlbumsPage">

    <Page.Resources>
        <CollectionViewSource x:Key="albumViewSource"></CollectionViewSource>
    </Page.Resources>

    <StackPanel>
        <TextBlock Text="ALBUMS PAGE" FontSize="48"></TextBlock>
        <DataGrid ItemsSource="{Binding Source={StaticResource albumViewSource}}"
                  AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding AlbumId}" Header="ID"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Title}" Header="Title"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding ArtistId}" Header="ArtistID"></DataGridTextColumn>

            </DataGrid.Columns>
        </DataGrid>
    </StackPanel>
</Page>
